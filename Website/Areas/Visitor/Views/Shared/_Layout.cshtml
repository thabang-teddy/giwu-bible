<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GIWU bible</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Website.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true" />
</head>
<body class="full-vh full-vw m-0 p-0 row overflow-hidden">
    @await Component.InvokeAsync("LeftBar")
    <div class="main-left full-vh m-0 p-0 col-10 flex-column overflow-auto" role="main">
        @await Component.InvokeAsync("Header")
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await Component.InvokeAsync("PageData")

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main-left-menu-bar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

