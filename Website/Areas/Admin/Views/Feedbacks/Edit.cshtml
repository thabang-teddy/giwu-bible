@model Website.Areas.Admin.ViewModels.Feedback.FeedbackEditViewModel

@{
    ViewData["Title"] = "View Feedback";
}

<h2>View Feedback</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control" disabled></textarea>
    </div>
    
    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <div class="form-group mb-4">
        <label asp-for="AlertDate"></label>
        <input asp-for="AlertDate" class="form-control" />
    </div>

    <div class="form-group mb-4">
        <label asp-for="CreatedAt"></label>
        <input asp-for="CreatedAt" class="form-control" disabled  />
    </div>
    
    <div class="form-group mb-4">
        <label asp-for="UpdateAt"></label>
        <input asp-for="UpdateAt" class="form-control" disabled />
    </div>
    
    <div class="form-group mb-4">
        <label asp-for="UpdateBy"></label>
        <input asp-for="UpdateBy" class="form-control" disabled/>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>