@model Website.Areas.Admin.ViewModels.Bibles.ChapterCreateFormViewModel

<form asp-action="ChapterCreate" method="post" id="chapterForm">
	<input type="hidden" asp-for="BibleBookId" />
	<input type="hidden" asp-for="Book" />
	<div class="row mb-3">
		<div class="col-12 pb-3">
			<label asp-for="Number">Chapter</label>
			<input class="form-control" asp-for="Number" />
		</div>
		<div class="col-12 py-3">
			<label asp-for="Verses">Verses</label>
			<textarea class="form-control" asp-for="Verses" rows="10"></textarea>
		</div>
		<div class="col-12 py-3 messages-list"></div>
	</div>

	<button type="submit" class="btn btn-primary">Create</button>
	<button type="button" class="btn btn-secondary">Clear</button>
</form>