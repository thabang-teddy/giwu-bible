@using Models

@model List<Website.Areas.Admin.ViewModels.Visitor.BibleViewModel>

@{
    ViewData["Title"] = "Dashboard";

}

<div class="container-fluid">
    <h4>Dashboard</h4>
    <div class="row">

        @if (Model != null && Model.Any())
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-3">
                    <div class="card my-2">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-body-secondary">bbe</h6>
                            <h5 class="card-title">Bible in Basic English</h5>
                            <p class="card-text">The Bible In Basic English (also known as BBE) is a translation of the Bible into Basic English. The BBE was translated by ..</p>
                            <a asp-area="Admin" asp-controller="Bible" asp-action="Edit" asp-rout-id="@Model[i].Id" type="button" class="btn btn-primary">Edit</a>
                            <a asp-area="Admin" asp-controller="Bible" asp-action="Delete" asp-rout-id="@Model[i].Id" type="button" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        }
        
    </div>
</div>



@section Scripts {
}